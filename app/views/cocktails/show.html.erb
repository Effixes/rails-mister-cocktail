<h1>Did you wanted a: </h1>
<%= @cocktail.name %>
<% @cocktail.doses.each do |dose| %>
  <p><%= dose.description %> : <%= dose.ingredient.name %></p>
  <p><%= link_to "Delete #{dose.description}",dose_path(dose), method: :delete %></p>

<% end %>

<%= link_to 'Cocktails', cocktails_path %>
<%= link_to 'Add doses', new_cocktail_dose_path(@cocktail) %>

<%= link_to "Delete #{@cocktail.name}",
            cocktail_path(@cocktail),
            method: :delete,
            data: { confirm: "Are you sure?" } %>

